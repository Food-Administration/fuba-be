          "mode": "raw",
          "raw": "{\n  \"name\": \"The Pizza Hub\",\n  \"image\": \"https://example.com/pizza-hub.jpg\",\n  \"street\": \"123 Main Street\",\n  \"state\": \"California\",\n  \"mode\": \"both\",\n  \"items\": [],\n  \"openTime\": \"09:00\",\n  \"closeTime\": \"23:00\",\n  \"ratings\": 4.5,\n  \"promo\": {\n    \"freeDelivery\": true,\n    \"discountPercentage\": 10\n  }\n}"
        },

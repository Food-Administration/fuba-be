{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib", // Outputs the compiled files to the 'lib' folder
    "rootDir": "./",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "target": "ES2021",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],  
    "paths": {
    "@models/*": ["functions/models/*"],
    "@config/*": ["functions/config/*"],
    "@services/*": ["functions/services/*"],
    "@controllers/*": ["functions/controllers/*"],
    "@emailTemplates/*": ["functions/emailTemplates/*"],
    "@routes/*": ["functions/routes/*"],
    "@utils/*": ["functions/utils/*"],
    "@types/*": ["functions/types/*"],
    "@middleware/*": ["functions/middleware/*"],
  },  
  },  
  "compileOnSave": true,
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}

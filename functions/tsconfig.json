{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./lib", // Outputs the compiled files to the 'lib' folder
    "rootDir": "./",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "ES2021",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "compileOnSave": true,
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
  
}
